<div class="row">
  <div class="col-xs-7 sign-up-log-in">

    <h2>Change password</h2>
    <br>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <%= form_group_tag(devise_error_messages![:password]) do %>
        <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: "New Password", autocomplete: "off" %>
        <small class="error-message"><%= devise_error_messages![:password].first %></small>
      <% end %>

      <%= form_group_tag(devise_error_messages![:password_confirmation]) do %>
          <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: "Confirm new password", autocomplete: "off" %>
          <small class="error-message"><%= devise_error_messages![:password_confirmation].first %></small>
      <% end %>

      <div class="actions">
        <%= f.submit "Change password" %>
      </div>
    <% end %>

    </div>
</div>