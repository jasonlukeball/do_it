<div class="panel panel-default">
  <a data-toggle="collapse" data-parent="#accordion" href="#<%= list.id %>" class="">
  <div class="panel-heading list-card o__hoverable" >
    <h4 class="panel-title">
        <%= list.name %>
    </h4>
  </div>
  </a>

  <div id="<%= list.id %>" class="panel-collapse collapse">
    <div class="panel-body">
      <%= render 'todos/form', todo: Todo.new, list: list %>
      <div id="<%= "list-#{list.id}-todos" %>">
        <% if list.todos.any? %>
              <%= render list.todos %>
        <% else %>
          <li>1</li>
          <li>2</li>
          <li>3</li>
        <% end %>
      </div>
    </div>
  </div>
</div>